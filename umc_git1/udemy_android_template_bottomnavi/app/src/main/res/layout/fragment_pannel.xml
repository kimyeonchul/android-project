<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_pannel_background_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/flo2"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/home_pannel_btn_settings_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/home_pannel_btn_share_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/share"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_settings_iv"
        app:layout_constraintTop_toTopOf="parent"/>



    <ImageView
        android:id="@+id/home_pannel_btn_more_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/more"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_share_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_pannel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매혹적인 음색의 여성 보컬 \n팝"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_settings_iv"
        />
    <ImageView
        android:id="@+id/home_pannel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_settings_iv"/>

    <TextView
        android:id="@+id/home_pannel_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 36곡, 2020.03.14"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img_iv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/home_pannel_album_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/home_pannel_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In My Bed"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singger_tv"
        />
    <TextView
        android:id="@+id/home_pannel_album_singger_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kim yeon chul"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
        app:layout_constraintBaseline_toBottomOf="@id/home_pannel_album_img_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>